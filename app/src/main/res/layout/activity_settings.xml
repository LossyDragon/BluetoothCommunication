<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/widget_frame"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/pref_1"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/pref_autoReconnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="@string/pref_auto_connect"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pref_autoReconnect"
            android:text="@string/pref_auto_connect_desc" />

        <Switch
            android:id="@+id/pref_switch_autoConnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp" />
    </RelativeLayout>

    <!-- More Settings can be added here -->

</LinearLayout>